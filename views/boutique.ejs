<body>
    <%- include('composants/nav.ejs')  %>

    <div class=" hastag">
        <div class="overlay">
            Les Filtre C'est Jolie , Mais Prendre Soin De Sa Peau C'est Mieux !
        </div>
    </div>
    <br>
    <h1 style="text-align: center;">Nos Produits</h1> <br>

    <div class="radio-inputs">
        <label class="radio">
          <input type="radio" name="radio" checked="">
          <span class="name">TOUT</span>
        </label>
        <label class="radio">
          <input type="radio" name="radio">
          <span class="name">SANTER</span>
        </label>
            
        <label class="radio">
          <input type="radio" name="radio">
          <span class="name">BEAUTER</span>
        </label>
      </div>

    <div class="row">
        <% produits.forEach((produit) => { %>
            <div class="col-md-3 product-card" data-categorie="tout" data-nom="<%= produit.nom %>" style="height: auto;">
                <div class="card mb-10 shadow-sm">
                <div class="cardTop">
                    <img src="<%= produit.url %>" alt="">
                </div>
                <div class="cardBottom">
                    <h6><%= produit.nom %></h6>
                    
                    <!-- Bouton "voir plus" (vous pouvez ajouter le contenu souhaité ici) -->
                    <p class="d-inline-flex gap-1">
                        <a class="" data-bs-toggle="collapse" href="#collapseExample_<%= produit.id %>" role="button" aria-expanded="false" aria-controls="collapseExample_<%= produit.id %>">
                            Voir plus...
                        </a>
                    </p>
                    <div class="collapse" id="collapseExample_<%= produit.id %>">
                        <div class="">
                            <!-- Contenu du "voir plus" -->
                            <%= produit.description %>
                        </div>
                    </div>

                    <div class="cardFooter">
                        <div style="display: flex; margin-bottom: 10px;">
                            <!-- Affichage des étoiles (si vous avez un champ "évaluation" dans votre base de données) -->
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                        </div>
                        <div style="display: flex; justify-content: space-between;">
                            <!-- Affichage du prix -->
                            <p style="color: rgb(44, 190, 44);"><%= produit.prix %> CFA</p>
                            <div class="panierTonne ajouter-au-panier" data-id="<%= produit.id %>"
                                data-prix="<%= produit.prix %>"
                                data-nom="<%= produit.nom %>"
                                data-description="<%= produit.description %>"
                                data-url="<%= produit.url %>">
                                <i class="fa-solid fa-cart-plus"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br>
        </div>
        <% }); %>
    </div>

    <!-- ... Autre contenu de la page ... -->

    <!-- my footer here -->
    <%- include('composants/footer.ejs')  %>

