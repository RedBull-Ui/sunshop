<!DOCTYPE html>
<html lang="fr">

<head>
  <meta charset="UTF-8">
  <!-- Balise meta pour la description de la page (méta-description) -->
  <meta name="description" content="Découvrez notre large gamme de compléments alimentaires">

  <!-- Balise meta pour les mots-clés (méta-keywords) -->
  <meta name="keywords" content="compléments alimentaires, Medical, santer">

  <!-- favicon  -->
  <link rel="apple-touch-icon" sizes="180x180" href="./img/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="./img/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="./img/favicon-16x16.png">
  <link rel="manifest" href="./img/site.webmanifest">
  <!-- favicon  -->

  <!-- Balise meta pour l'auteur -->
  <meta name="author" content="Sun shop">

  <!-- Balise meta pour la distribution -->
  <meta name="distribution" content="global">

  <!-- Balise meta pour l'indexation des robots -->
  <meta name="robots" content="index, follow">

  <!-- Balise meta pour le viewport (pour les appareils mobiles) -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- boostrap here -->
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
  
  <!-- font awesome style -->
  <link rel="stylesheet" href="/fontawesome-free/css/all.min.css" />
  
  <link rel="stylesheet" href="/css/boutique.css">
  <title> The ordinary</title> <br>

  <script>
    localStorage.setItem('state', 'boutique')
  </script>
</head>

<body>
  <%- include('composants/nav.ejs')  %>

  <br> <br>
  <br>
  <button type="button" class="btn btn-light" onclick="window.location.href='/boutique' ">Retour</button>

  <br>
  <h1 style="text-align: center;">The ordinary</h1> <br>
  <div class="row">
    <% theOrdinary.forEach((produit) => { %>
    <div class="col-md-3 product-card" data-categorie="tout" data-nom="<%= produit.nom %>" style="height: auto;">
      <div class="card mb-10 shadow-sm">
        <div class="cardTop">
          <img src="<%= produit.url %>" alt="">
        </div>
        <div class="cardBottom">
          <h6 style="text-transform: uppercase;"><%= produit.nom %></h6>

          <!-- Bouton "voir plus" (vous pouvez ajouter le contenu souhaité ici) -->
          <p class="d-inline-flex gap-1">
            <a class="" data-bs-toggle="collapse" href="#collapseExample_<%= produit.id %>" role="button" aria-expanded="false" aria-controls="collapseExample_<%= produit.id %>">
              Voir plus...
            </a>
          </p>
          <div class="collapse" id="collapseExample_<%= produit.id %>">
            <div class="">
              <!-- Contenu du "voir plus" -->
              <%= produit.desc %>
            </div>
          </div>

          <div class="cardFooter">
            <div style="display: flex; margin-bottom: 10px;">
              <!-- Affichage des étoiles (si vous avez un champ "évaluation" dans votre base de données) -->
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
            </div>
            <div style="display: flex; justify-content: space-between;">
              <!-- Affichage du prix -->
              <p style="color: rgb(44, 190, 44);"><%= produit.prix %> CFA</p>
              <div class="panierTonne ajouter-au-panier" data-id="<%= produit.id %>" data-prix="<%= produit.prix %>" data-nom="<%= produit.nom %>" data-description="<%= produit.desc %>" data-url="<%= produit.url %>">
                <i class="fa-solid fa-cart-plus"></i>
              </div>

            </div>
          </div>
        </div>
      </div>
      <br>
    </div>
    <% }); %>
  </div>

  <!-- ... Autre contenu de la page ... -->

  <!-- my footer here -->
  <%- include('composants/footer.ejs')  %>

  <!-- my footer here -->

  <!-- bosstrap js ici  -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

  <!-- cdn gsap ici -->
  <!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"
        integrity="sha512-16esztaSRplJROstbIIdwX3N97V1+pZvV33ABoG1H2OyTttBxEGkTsoIVsiP1iaTtM8b3+hu2kB6pQ4Clr5yug=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>         -->
  <script src="/script/boutique.js"></script>
  <script src="/script/index.js"></script>

</body>


</html>